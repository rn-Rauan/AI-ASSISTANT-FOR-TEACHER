generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Disciplinas  {
  id                     String    @id @default(uuid())
  disciplina_codigo      String
  ano_serie              String
  created_at             DateTime  @default(now())

  //Relacionamento
  unidades               Unidades[]
  @@map("disciplinas")
}
model Unidades {
  id                     String    @id @default(uuid())
  disciplina_id          String
  tema                   String
  origem_tema            String    // bncc  | manual (validado na aplicação)
  created_at             DateTime  @default(now())
  
  //Relacionamento
  disciplinas            Disciplinas @relation(fields: [disciplina_id], references: [id], onDelete: Cascade)
  conteudos              ConteudosGerados[]
  @@map("unidades")
}
model ConteudosGerados {
  id                     String    @id @default(uuid())
  unidade_id             String
  tipo                   String    // plano_de_aula | atividade | slide
  conteudo               String
  created_at             DateTime  @default(now())

  //Relacionamento
  unidades               Unidades @relation(fields: [unidade_id], references: [id], onDelete: Cascade)
  @@map("conteudos_gerados")
}